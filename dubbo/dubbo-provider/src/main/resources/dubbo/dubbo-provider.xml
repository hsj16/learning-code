<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
	         http://code.alibabatech.com/schema/dubbo
	         http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	         http://www.springframework.org/schema/context
			 http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:application.properties" />

	<dubbo:application name="dubbo-demo" owner="shaojian.huang" organization="hsj" />

	<dubbo:monitor protocol="registry"></dubbo:monitor>

	<dubbo:provider group="${zookeeper.group}" />

	<dubbo:registry id="zk-reg" protocol="zookeeper" address="${zookeeper.address}" />

	<dubbo:protocol id="dubbo-protocol" name="dubbo" port="20083" />

	<!-- 需要暴露的接口 -->
	<dubbo:service interface="com.hsj.dubbo.api.service.UserService" timeout="6000000" version="1.0"
		ref="userServiceImpl" registry="zk-reg" protocol="dubbo-protocol" />

</beans>